@model Registreerimissüsteem.Models.EditModel
<p>
    <p id="CompanyForm">
        @using (Html.BeginForm("CreateCompany", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Company.Name, "Nimi", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Company.Name, new { htmlAttributes = new { @class = "form-control datepicker" } })
                    @Html.ValidationMessageFor(model => model.Company.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Company.RegistryNumber, "Registrinumber", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Company.RegistryNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Company.RegistryNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Company.NumberOfParticipants, "Osalejate arv", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Company.NumberOfParticipants, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Company.NumberOfParticipants, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Company.PaymentMethod.Name, "Maksmisviis", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.SelectedPaymentMethodId, new SelectList(Model.PaymentMethods, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Company.PaymentMethod, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Company.Info, "Lisainfo", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Company.Info, new { htmlAttributes = new { @class = "form-control", style = "height:200px" } })
                    @Html.ValidationMessageFor(model => model.Company.Info, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.HiddenFor(model => Model.SelectedEventId)
            @Html.HiddenFor(model => Model.Company.Id)
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
        }
    </p>